<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff009688">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/group_information"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="정보"
            android:onClick="groupClick"/>

        <Button
            android:id="@+id/group_jungmo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="정모"
            android:onClick="groupClick"/>

        <Button
            android:id="@+id/group_album"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="모임사진"
            android:onClick="groupClick"/>

        <Button
            android:id="@+id/group_member"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="맴버"
            android:onClick="groupClick"/>
    </LinearLayout>

    <com.daosyu.smallgroup.SmallGroupViewPager
        android:id="@+id/smallgroupViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.daosyu.smallgroup.SmallGroupViewPager>
</LinearLayout>
