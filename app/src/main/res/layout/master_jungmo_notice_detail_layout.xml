<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <TextView
            android:id="@+id/jungmo_title"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="토요일 오후 타임 영화보기"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="100dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/movie"
                app:border_width="1dp"
                app:border_color="#FF000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clock"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:src="@drawable/clock"/>

            <ImageView
                android:id="@+id/location"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:src="@drawable/navi"/>

            <ImageView
                android:id="@+id/won"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/won"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clock_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="7dp"
                android:text="2015년 11월 30일"/>

            <TextView
                android:id="@+id/location_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="7dp"
                android:text="건대입구 스타시티 롯데시네마"/>

            <TextView
                android:id="@+id/won_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="9000"/>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginRight="8dp"
            android:text="영화와 커피가 만났을때 "
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11월 30일 21:30분에 영화 '검은사제들' 같이 보실분 구합니다!!"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:textColor="#ffffffff"
            android:id="@+id/jungmo_update"
            android:background="#FF009688"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="수정 하기"
            android:onClick="btnManipulate"/>

        <Button
            android:textColor="#ffffffff"
            android:id="@+id/jungmo_delete"
            android:background="#FF009688"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제 하기"
            android:onClick="btnManipulate"/>
    </LinearLayout>
</LinearLayout>
